@model IEnumerable<SistemaVentas.Models.Inventario>

@{
    ViewData["Title"] = "Index";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<table class="table table-striped table-bordered">
    <thead class="table-primary">
        <tr>
            <th>@Html.DisplayNameFor(model => model.CantidadDisponible)</th>
            <th>@Html.DisplayNameFor(model => model.PrecioCompra)</th>
            <th>@Html.DisplayNameFor(model => model.PrecioVenta)</th>
            <th>@Html.DisplayNameFor(model => model.FechaUltimaActualizacion)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.CantidadDisponible)</td>
                <td>@Html.DisplayFor(modelItem => item.PrecioCompra)</td>
                <td>@Html.DisplayFor(modelItem => item.PrecioVenta)</td>
                <td>@Html.DisplayFor(modelItem => item.FechaUltimaActualizacion)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.IdProducto" class="btn btn-warning btn-sm">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.IdProducto" class="btn btn-info btn-sm">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.IdProducto" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
