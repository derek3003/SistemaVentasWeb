@model SistemaVentas.Models.Cargo

@{
    ViewData["Title"] = "Create Cargo";
}

<h1 class="text-center">Create Cargo</h1>

<div class="row">
    <div class="col-md-6 offset-md-3">
        <h4>Create a New Cargo</h4>
        <hr />
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- NombreCargo Field -->
            <div class="form-group">
                <label asp-for="NombreCargo" class="control-label"></label>
                <input asp-for="NombreCargo" class="form-control" />
                <span asp-validation-for="NombreCargo" class="text-danger"></span>
            </div>

            <!-- Descripcion Field -->
            <div class="form-group">
                <label asp-for="Descripcion" class="control-label"></label>
                <input asp-for="Descripcion" class="form-control" />
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>

            <!-- SalarioBase Field -->
            <div class="form-group">
                <label asp-for="SalarioBase" class="control-label"></label>
                <input asp-for="SalarioBase" class="form-control" />
                <span asp-validation-for="SalarioBase" class="text-danger"></span>
            </div>

            <!-- Submit Button -->
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary btn-lg" />
            </div>
        </form>

        <div class="mt-3">
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
