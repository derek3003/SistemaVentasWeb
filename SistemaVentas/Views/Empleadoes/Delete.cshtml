@model SistemaVentas.Models.Empleado

@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-center">Delete</h1>

<h3>Are you sure you want to delete this?</h3>

<div>
    <h4>Empleado</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Nombre)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Nombre)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.CorreoElectronico)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.CorreoElectronico)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Telefono)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Telefono)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.FechaContratacion)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.FechaContratacion)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Usuario)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Usuario)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Clave)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Clave)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.IdCargoNavigation)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.IdCargoNavigation.IdCargo)</dd>
    </dl>

    <div class="row">
        <div class="col-sm-6">
            <!-- Formulario de eliminación -->
            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="IdEmpleado" />
                <button type="submit" class="btn btn-danger btn-block">Delete</button>
            </form>
        </div>
        <div class="col-sm-6 text-right">
            <!-- Botón para regresar al listado -->
            <a asp-action="Index" class="btn btn-secondary btn-block">Back to List</a>
        </div>
    </div>
</div>
