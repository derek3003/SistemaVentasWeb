@model SistemaVentas.Models.Producto

@{
    ViewData["Title"] = "Edit";
}

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">Editar Producto</h3>
        </div>
        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                <input type="hidden" asp-for="IdProducto" />

                <div class="mb-3">
                    <label asp-for="NombreProducto" class="form-label fw-bold"></label>
                    <input asp-for="NombreProducto" class="form-control" />
                    <span asp-validation-for="NombreProducto" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Descripcion" class="form-label fw-bold"></label>
                    <textarea asp-for="Descripcion" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="PrecioCompra" class="form-label fw-bold"></label>
                    <input asp-for="PrecioCompra" type="number" step="0.01" class="form-control" />
                    <span asp-validation-for="PrecioCompra" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="PrecioVenta" class="form-label fw-bold"></label>
                    <input asp-for="PrecioVenta" type="number" step="0.01" class="form-control" />
                    <span asp-validation-for="PrecioVenta" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Estado" class="form-label fw-bold"></label>
                    <select asp-for="Estado" class="form-select">
                        <option value="true">Activo</option>
                        <option value="false">Desactivado</option>
                    </select>
                    <span asp-validation-for="Estado" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-end">
                    <a asp-action="Index" class="btn btn-secondary me-2">Volver a la Lista</a>
                    <input type="submit" value="Guardar Cambios" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
