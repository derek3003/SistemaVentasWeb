@model SistemaVentas.Models.Producto

@{
    ViewData["Title"] = "Detalles del Producto";
}

<div class="container mt-4">
    <h1 class="text-primary">@ViewData["Title"]</h1>
    <h4 class="text-secondary">Información del Producto</h4>
    <hr />

    <div class="card shadow-sm border-0">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-4 text-secondary fw-bold">
                    @Html.DisplayNameFor(model => model.NombreProducto)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.NombreProducto)
                </dd>

                <dt class="col-sm-4 text-secondary fw-bold">
                    @Html.DisplayNameFor(model => model.Descripcion)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Descripcion)
                </dd>

                <dt class="col-sm-4 text-secondary fw-bold">
                    @Html.DisplayNameFor(model => model.PrecioCompra)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.PrecioCompra)
                </dd>

                <dt class="col-sm-4 text-secondary fw-bold">
                    @Html.DisplayNameFor(model => model.PrecioVenta)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.PrecioVenta)
                </dd>

                <dt class="col-sm-4 text-secondary fw-bold">
                    @Html.DisplayNameFor(model => model.Estado)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Estado)
                </dd>
            </dl>
        </div>
    </div>

    <div class="mt-4 d-flex justify-content-between">
        <a asp-action="Edit" asp-route-id="@Model?.IdProducto" class="btn btn-warning">
            <i class="bi bi-pencil-square"></i> Editar
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Regresar a la Lista
        </a>
    </div>
</div>
