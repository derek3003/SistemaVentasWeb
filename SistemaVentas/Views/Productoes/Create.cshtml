@model SistemaVentas.Models.Producto

@{
    ViewData["Title"] = "Crear Producto";
}

<div class="container mt-4">
    <h1 class="text-primary">@ViewData["Title"]</h1>
    <h4 class="text-secondary">Completa los siguientes campos para registrar un nuevo producto:</h4>
    <hr />

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="mb-3">
                            <label asp-for="NombreProducto" class="form-label fw-bold"></label>
                            <input asp-for="NombreProducto" class="form-control" placeholder="Ingrese el nombre del producto" />
                            <span asp-validation-for="NombreProducto" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Descripcion" class="form-label fw-bold"></label>
                            <textarea asp-for="Descripcion" class="form-control" rows="3" placeholder="Describa el producto"></textarea>
                            <span asp-validation-for="Descripcion" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="PrecioCompra" class="form-label fw-bold"></label>
                            <input asp-for="PrecioCompra" type="number" class="form-control" placeholder="Ingrese el precio de compra" />
                            <span asp-validation-for="PrecioCompra" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="PrecioVenta" class="form-label fw-bold"></label>
                            <input asp-for="PrecioVenta" type="number" class="form-control" placeholder="Ingrese el precio de venta" />
                            <span asp-validation-for="PrecioVenta" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Estado" class="form-label fw-bold"></label>
                            <select asp-for="Estado" class="form-select">
                                <option value="">Seleccione el estado</option>
                                <option value="true">Activo</option>
                                <option value="false">Inactivo</option>
                            </select>
                            <span asp-validation-for="Estado" class="text-danger"></span>
                        </div>


                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-check-circle"></i> Crear
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Volver a la lista
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

