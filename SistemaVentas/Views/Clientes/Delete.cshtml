<h3 class="text-danger">Are you sure you want to delete this?</h3>

<div>
    <h4>Cliente Information</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
