@model SistemaVentas.Models.MovimientoVenta

@{
    ViewData["Title"] = "Crear Movimiento de Venta";
}

<div class="container mt-5">
    <h1 class="text-success">@ViewData["Title"]</h1>
    <h4>Detalles del Movimiento de Venta</h4>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="FechaVenta" class="control-label"></label>
                    <input asp-for="FechaVenta" class="form-control" />
                    <span asp-validation-for="FechaVenta" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="IdCliente" class="control-label"></label>
                    <select asp-for="IdCliente" class="form-control" asp-items="ViewBag.IdCliente"></select>
                    <span asp-validation-for="IdCliente" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="TotalVenta" class="control-label"></label>
                    <input asp-for="TotalVenta" class="form-control" />
                    <span asp-validation-for="TotalVenta" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Detalle" class="control-label"></label>
                    <input asp-for="Detalle" class="form-control" />
                    <span asp-validation-for="Detalle" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Crear" class="btn btn-success" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index" class="btn btn-secondary">Volver al Listado</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
