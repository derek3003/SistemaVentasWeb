@model IEnumerable<SistemaVentas.Models.Proveedore>

@{
    ViewData["Title"] = "Listado de Proveedores";
}

<div class="container mt-5">
    <h1 class="text-primary">@ViewData["Title"]</h1>
    <p>
        <a asp-action="Create" class="btn btn-success">Crear Nuevo Proveedor</a>
    </p>

    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead class="table-primary">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.NombreEmpresa)</th>
                    <th>@Html.DisplayNameFor(model => model.Telefono)</th>
                    <th>@Html.DisplayNameFor(model => model.CorreoElectronico)</th>
                    <th class="text-center">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.NombreEmpresa)</td>
                        <td>@Html.DisplayFor(modelItem => item.Telefono)</td>
                        <td>@Html.DisplayFor(modelItem => item.CorreoElectronico)</td>
                        <td class="text-center">
                            <a asp-action="Edit" asp-route-id="@item.IdProveedor" class="btn btn-warning btn-sm">Editar</a> |
                            <a asp-action="Details" asp-route-id="@item.IdProveedor" class="btn btn-info btn-sm">Detalles</a> |
                            <a asp-action="Delete" asp-route-id="@item.IdProveedor" class="btn btn-danger btn-sm">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
