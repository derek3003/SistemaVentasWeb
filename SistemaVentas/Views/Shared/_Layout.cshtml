<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ProyectoWeb</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProyectoWeb.styles.css" asp-append-version="true" />

    <style>
        /* Estilo para el icono del menú */
        .menu-icon {
            font-size: 1.5rem;
            color: white;
            cursor: pointer;
        }

        /* Estilo del menú lateral */
        .offcanvas {
            background-color: #007bff; /* Azul */
        }

            .offcanvas a {
                color: white;
            }

                .offcanvas a:hover {
                    background-color: #0056b3; /* Azul más oscuro */
                    color: white;
                }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-dark bg-primary">
            <div class="container-fluid">
                <!-- Icono para abrir el menú lateral -->
                <span class="menu-icon" data-bs-toggle="offcanvas" data-bs-target="#offcanvasMenu" aria-controls="offcanvasMenu">
                    &#9776; <!-- Icono de menú (hamburguesa) -->
                </span>
                <a class="navbar-brand ms-2" asp-area="" asp-controller="Home" asp-action="Index">Tienda de Dulces</a>
            </div>
        </nav>
    </header>

    <!-- Menú lateral (offcanvas) -->
    <div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasMenu" aria-labelledby="offcanvasMenuLabel">
        <div class="offcanvas-header">
            <h5 class="offcanvas-title" id="offcanvasMenuLabel">Menú</h5>
            <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body">
            @inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
            @if (HttpContextAccessor.HttpContext.Session.GetString("IdEmpleado") != null)
            {
                <ul class="list-unstyled">
                    <li><a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Inicio</a></li>
                    <li><a class="nav-link" asp-area="" asp-controller="Productoes" asp-action="Index">Productos</a></li>
                    <li><a class="nav-link" asp-area="" asp-controller="MovimientoVentas" asp-action="Index">Ventas</a></li>
                    <li><a class="nav-link" asp-area="" asp-controller="Empleadoes" asp-action="Index">Empleados</a></li>
                    <li><a class="nav-link" asp-area="" asp-controller="Cargoes" asp-action="Index">Cargos</a></li>
                    <li><a class="nav-link" asp-area="" asp-controller="Clientes" asp-action="Index">Clientes</a></li>
                    <li><a class="nav-link" asp-area="" asp-controller="Inventarios" asp-action="Index">Inventarios</a></li>
                    <li><a class="nav-link" asp-area="" asp-controller="MovimientoCompras" asp-action="Index">Compras</a></li>
                    <li><a class="nav-link" asp-area="" asp-controller="Proveedores" asp-action="Index">Proveedores</a></li>
                    <li><a class="nav-link" asp-area="" asp-controller="Login" asp-action="Logout">Cerrar Sesión</a></li>
                </ul>
            }
            else
            {
                <ul class="list-unstyled">
                    <li><a class="nav-link" asp-area="" asp-controller="Login" asp-action="Index">Iniciar Sesión</a></li>
                </ul>
            }
        </div>
    </div>

    <div class="container mt-3">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-4">
        <div class="container">
            &copy; 2024 - ProyectoWeb - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <!-- JS de Bootstrap -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
